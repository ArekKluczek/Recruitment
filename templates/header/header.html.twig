    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center border-bottom">
            <div class="col-4 pt-1">
                <h2><a class="text-decoration-none" href="{{ path('app_news_index') }}">RecruitmentBlog</a></h2>
            </div>
            <div class="col-4 text-center">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="p-2 text-dark text-decoration-none" href="{{ path('app_authors_index') }}">Manage Authors</a>
                    <a class="p-2 text-dark text-decoration-none" href="{{ path('app_news_new') }}">New Article</a>
